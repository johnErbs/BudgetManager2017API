<div class="jumbotron">
    <h2>Fetch Transactions & Return A Json Object</h2>
    <p class="lead">Search for transactions within two dates.</p>
    <p class="lead">To make your search:</p>
    <p class="lead">1. Select the dates you want to search from and to.</p>
    <p class="lead">2. Press the "Search" button.</p>
</div>

<div class="row">
    <div class="col-md-12" style="background-color: #edeff1;">
        <br />
            @using (Html.BeginForm("TimeSelector", "Home", FormMethod.Post, new { id = "submitForm" }))
            {
                <table>
                    <tr>
                        <td>
                            <label>Date From: &nbsp; </label>
                            <input type="datetime-local" value=@Html.TextBox("dateTime001")
                        </td>
                        <td>
                            <label> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Date To: &nbsp;</label>
                            <input type="datetime-local" @Html.TextBox("dateTime002") &nbsp; &nbsp; &nbsp;
                        </td>
                        <td>
                            <button type="submit" id="btnUpdate" name="Command" value="search">Search</button> &nbsp;
                            <button type="submit" id="btnUpdate" name="Command" value="getJson">Get Json (Date)</button> &nbsp;
                            <button type="submit" id="btnUpdate" name="Command" value="JsonData">Get Json (Database)</button> &nbsp;
                            <button type="submit" id="btnUpdate" name="Command" value="Description">Update with image</button> &nbsp;
                            <button type="submit" id="btnUpdate" name="Command" value="Logger">Logger</button> &nbsp;
                        </td>
                    </tr>
                </table>
            }
        <br />
    </div>
</div>
